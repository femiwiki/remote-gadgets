{
  "private": true,
  "scripts": {
    "lint-js": "node_modules/.bin/eslint pages/*.js",
    "lint-css": "node_modules/.bin/stylelint pages/*.css",
    "lint-json": "yarn run prettier-json-check || (yarn run prettier-json-write && git --no-pager diff && git reset --hard && false)",
    "lint-filename": "test -z \"$(find pages/ -not -regex \"pages/\\(\\S+\\)?\")\"",
    "prettier-json-check": "node_modules/prettier/bin-prettier.js --parser json -c pages/Gadget_definition:*",
    "prettier-json-write": "node_modules/prettier/bin-prettier.js --parser json --write pages/Gadget_definition:*",
    "lint": "yarn run lint-js && yarn run lint-css && yarn run lint-json && yarn run lint-filename"
  },
  "devDependencies": {
    "prettier": "1.18.2",
    "eslint": "^6.8.0",
    "eslint-config-prettier": "^6.0.0",
    "eslint-plugin-prettier": "^3.1.0",
    "stylelint": "^10.1.0",
    "stylelint-config-prettier": "^5.2.0",
    "stylelint-prettier": "^1.1.1"
  }
}
